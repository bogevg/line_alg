#include <iostream> // cin, cout
#include <windows.h>
#include <conio.h> //для getch()

using namespace std;

int main()
{
    SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	unsigned short int i,j;
	while(1){
	cout <<  "Enter i: ";
	cin >> i;
	cout << "Enter j: " ;
	cin >> j;
	if (i < j ) {
		cout << "i & j = "<< (i & j);
	}
	  else{
		cout << "i | j = "<< (i | j);
      }
	cout << "~i = " << (~i)<<"\n";
	}
	//
	// insert code here
	system("pause");
	//
	getch();
	//return 0;
}
