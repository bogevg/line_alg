#include <iostream>
#include <tchar.h>

using namespace std;

int _tmain(int argc, _TCHAR* argv[])
{
	int n,ss,c;
	char s[10];

	while (1) {
		cout << "Enter n: ";
		cin >> n;
		cout << "Enter ss: ";
		cin >> ss;
		c = 0;

		while ( n/ss > 0){
			s[10 - c]= char(n % ss);
			n/=ss;
		}
		count << s;
		s = "";
	}

}
